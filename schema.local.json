{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Componentes Config Schema",
  "type": "object",
  "properties": {
    "style": {
      "type": "string"
    },
    "rsc": {
      "type": "boolean"
    },
    "tsx": {
      "type": "boolean"
    },
    "tailwind": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string"
        },
        "css": {
          "type": "string"
        },
        "baseColor": {
          "type": "string"
        },
        "cssVariables": {
          "type": "boolean"
        }
      },
      "required": [
        "config",
        "css",
        "baseColor",
        "cssVariables"
      ]
    }
  },
  "required": [
    "style",
    "rsc",
    "tsx",
    "tailwind"
  ]
}